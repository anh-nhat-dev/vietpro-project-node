<!DOCTYPE html>
<html>
  <head>
    <%- include("layout/head", { title: `Danh mục sản phẩm - ${cate.title} ` }) %>
    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/category.css" />
  </head>
  <body>
    <!--	Header	-->
    <%- include("layout/header") %>
    <!--	End Header	-->

    <!--	Body	-->
    <div id="body">
      <div class="container">
        <div class="row"><%- include("layout/menu") %></div>
        <div class="row">
          <div id="main" class="col-lg-8 col-md-12 col-sm-12">
            <!--	Slider	-->
            <%- include("layout/slide") %>
            <!--	End Slider	-->

            <!--	List Product	-->
            <div class="products">
              <h3><%= cate.title %> (hiện có <%= total %> sản phẩm)</h3>
              <div class="product-list card-deck">
               <div class="product-list card-deck">
                 <% for (let product of products) { %>
                <%- include("components/product-item",   {product}) %>
                <% } %>
              </div>
              </div>
            </div>
            <!--	End List Product	-->
               <div id="pagination">
                    <ul class="pagination">
                      <% if (page > 1) { %>
                      <li class="page-item">
                        <a class="page-link" href="/category-<%= cate.slug %>.<%= cate.id %>?page=<%= page - 1 %>">Trang trước</a>
                      </li>
                      <% } %>

                      <% for (let p of pages) { %>

                        <% if (p === "...") { %>
                        <li class="page-item <%= page === p  ? "active" : "" %>">
                          <span class="page-link"><%= p %></span>
                        </li>
                        <% } else{  %>
                        <li class="page-item <%= page === p  ? "active" : "" %>">
                          <a class="page-link" href="/category-<%= cate.slug %>.<%= cate.id %>?page=<%= p %>"><%= p %></a>
                        </li>
                        <% } %>
                      <% } %>
                      <% if (page < totalPage) { %>
                      <li class="page-item">
                        <a class="page-link" href="/category-<%= cate.slug %>.<%= cate.id %>?page=<%= page + 1 %>">Trang sau</a>
                      </li>
                      <% } %>
                    </ul> 
                </div>
          </div>

          <%- include("layout/sidebar") %>
        </div>
      </div>
    </div>
    <!--	End Body	-->
    <%- include("layout/footer") %>
  </body>
</html>
