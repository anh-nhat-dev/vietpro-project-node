<!DOCTYPE html>
<html>
  <head>
    <%- include("layout/head", { title: "Tìm kiếm" }) %>
    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/search.css" />
  </head>
  <body>
    <!--	Header	-->
    <%- include("layout/header") %>
    <!--	End Header	-->

    <!--	Body	-->
    <div id="body">
      <div class="container">
        <div class="row"><%- include("layout/menu") %></div>
        <div class="row">
          <div id="main" class="col-lg-8 col-md-12 col-sm-12">
            <!--	Slider	-->
            <%- include("layout/slide") %>
            <!--	End Slider	-->

            <!--	List Product	-->
            <div class="products">
              <% if (q) { %>
                <div id="search-result">
                  Kết quả tìm kiếm với từ khóa
                  <span><%= q %></span>
                </div>
              <% } %>
              <div class="product-list card-deck">
                 <% for (let product of products) { %>
                <%- include("components/product-item",   {product}) %>
                <% } %>
              </div>
            </div>
            <!--	End List Product	-->

            <div id="pagination">
              <ul class="pagination">
               <% if (page > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/search?page=<%= page - 1 %>&q=<%= q %>">Trang trước</a>
                </li>
                <% } %>

                <% for (let p of pages) { %>

                  <% if (p === "...") { %>
                  <li class="page-item <%= page === p  ? "active" : "" %>">
                    <span class="page-link"><%= p %></span>
                  </li>
                  <% } else{  %>
                   <li class="page-item <%= page === p  ? "active" : "" %>">
                    <a class="page-link" href="/search?page=<%= p %>&q=<%= q %>"><%= p %></a>
                  </li>
                  <% } %>
                <% } %>
                 <% if (page < totalPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/search?page=<%= page + 1 %>&q=<%= q %>">Trang sau</a>
                </li>
                <% } %>
              </ul>
            </div>
          </div>

          <%- include("layout/sidebar") %>
        </div>
      </div>
    </div>
    <!--	End Body	-->
    <%- include("layout/footer") %>
  </body>
</html>
